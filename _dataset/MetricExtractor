import csv

def read_London_Station():
    stations = []
    with open('_dataset\london.stations.csv')as file:
        csvFile = csv.reader(file)

        for lines in csvFile:
            stations.append(lines)
    stations.pop(0)
    return stations


def read_London_Lines():
    L_Lines = [] #
    with open('_dataset\london.lines.csv')as file:
        csvFile = csv.reader(file)

        for lines in csvFile:
            L_Lines.append(lines)

    L_Lines.pop(0)
    return L_Lines

def read_London_Connections():
    connections = [] #
    with open('_dataset\london.connections.csv')as file:
        csvFile = csv.reader(file)

        for lines in csvFile:
            connections.append(lines)

    connections.pop(0)
    return connections